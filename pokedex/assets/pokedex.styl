@import url(//spoqa.github.io/spoqa-han-sans/css/SpoqaHanSans-kr.css);
@import url('../../node_modules/milligram/dist/milligram.css');

html
  font-family: "Spoqa Han Sans", "Spoqa Han Sans KR", sans-serif;

nav
  h1
    text-align: center

div.pokemon-profile
  width: 100%

  img
    width: 25%
    display:inline-block

  div.pokemon-info
    width: 70%
    display: inline-block

table
  tbody
    width: 100%

  tr
    width: 100%

@media(max-width: 40.0 rem)
  div.pokemon-profile
    img
      width: 100%
      display: block

    div.pokemon-info
      width: 100%
      display: block
