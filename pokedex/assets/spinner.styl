// Borrowed from https://www.pexels.com/blog/css-only-loaders/
.spinner
  display: none
  position: fixed
  top: 50%
  left: 50%

  height: 30px
  width: 30px
  margin: -15px 0 0 -15px

  border: 5px solid #333
  border-radius: 30px
  opacity: 0

  animation: pulsate 1s ease-out
  animation-iteration-count: infinite


@keyframes pulsate
  0%
    transform: scale(.1)
    opacity: 0.0

  50%
    opacity: 1

  100%
    transform: scale(1.2)
    opacity: 0
